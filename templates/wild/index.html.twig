{% extends 'base.html.twig' %}
{% block title %}all program{% endblock %}

{% block body %}
    {% for program in programs %}

    <div class="media">
        <a href="{{ path('show_program', {"slug":program.title|lower|replace({' ': '-'})}) }}"><img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster"></a>
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
        </div>
    </div>
    {% endfor %}

    <button type="button" class="btn btn-lg round m-5">
